<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".EventDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar_dummy"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginStart="20dp"
            app:expandedTitleMarginBottom="20dp"
            app:expandedTitleTextAppearance="@style/CollapsingTitleText"
            app:collapsedTitleTextAppearance="@style/CollapsedTitleText">

            <ImageView
                android:id="@+id/event_detail_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:contentDescription="Event or Activity Image"
                tools:src="@tools:sample/backgrounds/scenic" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_dummy"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/rounded_button_background"
                android:src="@drawable/ic_back"
                app:tint="@color/white"
                android:elevation="8dp"
                android:contentDescription="Back"
                android:layout_gravity="top|start"
                app:layout_collapseMode="pin" />

            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/rounded_button_background"
                android:src="@drawable/ic_share"
                app:tint="@color/white"
                android:elevation="8dp"
                android:contentDescription="Share Event"
                android:layout_gravity="top|end"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/event_detail_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textColor="#6B7280"
                android:textSize="18sp"
                tools:text="Starting at $50 Â· Limited Seats" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About the Event"
                android:textColor="#1F2937"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="6dp"
                android:textColor="#374151"
                android:textSize="16sp"
                android:paddingBottom="24dp"
                tools:text="Experience the best event in Southeast Asia! Featuring world-class artists, food trucks, and a guaranteed unforgettable weekend." />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="#E5E7EB" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date &amp; Location"
                android:textColor="#1F2937"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout style="@style/DetailRow">
                <TextView style="@style/DetailLabel" android:text="Date" />
                <TextView
                    android:id="@+id/tv_detail_date"
                    style="@style/DetailValue"
                    tools:text="Saturday, Nov 15, 2025" />
            </LinearLayout>

            <LinearLayout style="@style/DetailRow" android:layout_marginBottom="16dp">
                <TextView style="@style/DetailLabel" android:text="Location" />
                <TextView
                    android:id="@+id/tv_detail_location"
                    style="@style/DetailValue"
                    tools:text="Jakarta International Expo" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_view_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View on Map ðŸ—ºï¸"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_marginBottom="32dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardElevation="10dp"
        app:cardCornerRadius="0dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_book_now"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:text="Book Your Spot Now"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>