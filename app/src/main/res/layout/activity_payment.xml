<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking Summary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/booking_summary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Passenger: John Doe\nFlight: Garuda Indonesia GA-401\nRoute: Jakarta â†’ Bali\nDate: 15 Nov 2025\nTime: 08:00 - 10:30\nPassengers: 2"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/primary_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="#E0E0E0" />

                <TextView
                    android:id="@+id/total_amount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 2.500.000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Select Payment Method"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text" />

        <RadioGroup
            android:id="@+id/payment_method_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <RadioButton
                android:id="@+id/credit_card_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:buttonTint="@color/primary"
                android:text="ðŸ’³ Credit/Debit Card"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/grabpay_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:buttonTint="@color/primary"
                android:text="ðŸ“± GrabPay"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/ovo_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:buttonTint="@color/primary"
                android:text="ðŸ’° OVO"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/bank_transfer_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:buttonTint="@color/primary"
                android:text="ðŸ¦ Bank Transfer"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/installment_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:buttonTint="@color/primary"
                android:text="ðŸ“Š Credit Card Installment"
                android:textSize="16sp" />
        </RadioGroup>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/pay_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:text="Pay Now"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:cornerRadius="12dp" />

    </LinearLayout>
</ScrollView>