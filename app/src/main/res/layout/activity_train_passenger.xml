<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- 1. Scrollable Content Area: This section holds all the details and input fields. -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="88dp"> <!-- Extra padding to ensure the bottom content is visible above the fixed 'Continue' button -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"> <!-- Horizontal padding for content alignment -->

            <!-- Title for the entire section (Adjusted top margin to prevent overlap with floating back button) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking and Passenger Details"
                android:textColor="#1F2937"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="64dp" /> <!-- ADJUSTED: Increased to 64dp to clear the 48dp button + 16dp margin -->

            <!-- *** START: BOOKING SUMMARY CARD *** -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Train Summary"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"/>

                    <!-- ID REQUIRED BY TrainPassengerActivity.java -->
                    <TextView
                        android:id="@+id/text_summary_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading Train Details..."
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="4dp"
                        tools:text="KA Argo Wilis (Executive)" />

                    <!-- ID REQUIRED BY TrainPassengerActivity.java -->
                    <TextView
                        android:id="@+id/text_summary_route_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Route and Time Placeholder"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        tools:text="BD → GMR\n05:00 - 15:00 | 2 Passengers" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E7EB"
                        android:layout_marginVertical="8dp" />

                    <!-- ID REQUIRED BY TrainPassengerActivity.java -->
                    <TextView
                        android:id="@+id/text_summary_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: Rp 0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#C51162"
                        tools:text="Total: Rp 900.000"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- *** END: BOOKING SUMMARY CARD *** -->

            <!-- Separator for passenger input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passenger Information (Ticket Holder)"
                android:textColor="#1F2937"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="-8dp"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/full_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name (as on ID)"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/id_number_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ID Card Number (KTP)"
                    android:inputType="number"
                    android:maxLength="16" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FEF3C7"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ℹ️"
                        android:textSize="20sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Please ensure the name matches your ID card exactly. E-ticket will be sent to your email."
                        android:textColor="#92400E"
                        android:textSize="13sp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Final space buffer before the fixed button -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>
    </ScrollView>

    <!-- 2. Fixed 'Continue' Button at the bottom (Floats over the ScrollView) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:text="Continue to Payment"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#3B82F6"
        app:cornerRadius="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:elevation="8dp" />

    <!-- 3. Floating Back Button (Top Left) -->
    <!-- Uses a MaterialCardView to create the circular, elevated effect from the image -->
    <!-- The card is made clickable and the content below is spaced out to prevent overlap. -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/floating_back_button_card"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#E3F2FD"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            app:tint="#3B82F6"
            android:padding="12dp" />

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>