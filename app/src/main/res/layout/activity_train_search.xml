<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:fitsSystemWindows="false"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"
            app:contentScrim="#FFFFFF"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:layout_marginTop="0dp">  <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"
            android:scaleType="centerCrop"
            android:src="@drawable/train_header_bg"
            app:layout_collapseMode="parallax"
            android:contentDescription="Train background image" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                app:layout_collapseMode="parallax"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:paddingHorizontal="24dp"
                android:paddingBottom="24dp"
                app:layout_collapseMode="parallax">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trains"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A comfy and reliable transportation"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="80dp"  android:fitsSystemWindows="false"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_blue_circle_back"
                android:paddingTop="32dp"  android:layout_marginTop="0dp"
                app:contentInsetStartWithNavigation="0dp"  />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="64dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/search_form_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginTop="10dp"> <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <LinearLayout
                    android:id="@+id/from_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toStartOf="@+id/swap_icon_container">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FROM"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:textAllCaps="true" />

                    <EditText
                        android:id="@+id/from_station_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Origin City"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:inputType="textCapWords"
                        android:background="@null"
                        tools:text="Select city or station" />
                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/from_layout"
                    android:layout_toStartOf="@+id/swap_icon_container"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#E0E0E0"/>

                <LinearLayout
                    android:id="@+id/to_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/divider" android:layout_toStartOf="@+id/swap_icon_container">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TO"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:textAllCaps="true" />

                    <EditText
                        android:id="@+id/to_station_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Destination City"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:inputType="textCapWords"
                        android:background="@null"
                        tools:text="Going anywhere?" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/swap_icon_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/swap_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_swap"
                        app:tint="#3B82F6"
                        android:background="@drawable/icon_background_light"
                        android:padding="10dp"
                        android:contentDescription="Swap cities icon" />
                </FrameLayout>

            </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/date_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginTop="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/date_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#4B5563"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Calendar icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_toEndOf="@id/date_icon"
                        android:layout_centerVertical="true">

                        <EditText
                            android:id="@+id/date_display_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thu, 13 Nov"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:background="@null"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            tools:ignore="DeprecatedID" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Round trip?"
                            android:textColor="#1F2937"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp" />

                        <Switch
                            android:id="@+id/switch_round_trip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:thumbTint="#3B82F6"
                            android:trackTint="#E5E7EB"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />

                    </LinearLayout>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/passenger_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        app:tint="#4B5563"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Passenger icon" />

                    <TextView
                        android:id="@+id/passenger_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Passenger"
                        android:textColor="#1F2937"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/search_trains_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="Search trains"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#3B82F6"
                app:cornerRadius="16dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="80dp"
                android:layout_height="4dp"
                android:background="#D1D5DB"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                app:cornerRadius="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trains special promos"
                android:textColor="#1F2937"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="300dp"
                        android:layout_height="140dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/promo_card_1"
                            android:contentDescription="Special deal promo" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="300dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/promo_card_2"
                            android:contentDescription="Enjoy promo" />
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>