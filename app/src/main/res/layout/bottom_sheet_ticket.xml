<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:background="@drawable/bottom_sheet_background"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/handle_indicator"
        android:backgroundTint="@color/divider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your E-Ticket / Voucher"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/bottom_sheet_qr_code_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:contentDescription="QR Code for E-Ticket/Voucher"
        android:scaleType="fitCenter"
        android:background="@color/white"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/bottom_sheet_ticket_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="--- Booking Details for Scan ---"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/bottom_sheet_passenger_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="10dp"
        android:textSize="14sp"
        android:textColor="@color/primary_text"
        android:lineSpacingExtra="6dp"
        tools:text="Booking Type: FLIGHT\nPNR / ID: A7K9X2\nStatus: Confirmed\nTotal Paid: Rp 2.500.000" />

    <Button
        android:id="@+id/bottom_sheet_close_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="20dp"
        android:text="Done / Close"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/button_gradient"
        app:cornerRadius="4dp" /> </LinearLayout>
</ScrollView>