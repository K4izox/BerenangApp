<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flight_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Airline Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/airline_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Garuda Indonesia"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/flight_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GA-401"
                android:textSize="14sp"
                android:textColor="@color/secondary_text" />
        </LinearLayout>

        <!-- Route -->
        <TextView
            android:id="@+id/route_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Jakarta → Bali"
            android:textSize="14sp"
            android:textColor="@color/secondary_text" />

        <!-- Time Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/departure_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:background="@color/secondary_text" />

            <TextView
                android:id="@+id/arrival_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />
        </LinearLayout>

        <!-- Duration & Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/duration_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2h 30m"
                android:textSize="14sp"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/flight_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direct Flight"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/success" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#E0E0E0" />

        <!-- Price & Seats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 1.250.000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/seats_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="45 seats left"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select →"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>