<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state (checked = true) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <!-- Light primary color background for selected state (Using a common light blue hex for safety) -->
            <solid android:color="#E6F2FF" />
            <!-- Primary color border for selected state -->
            <stroke android:width="2dp" android:color="@color/primary" />
        </shape>
    </item>

    <!-- Default state (checked = false) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@android:color/white" />
            <!-- Light gray border for unselected state -->
            <stroke android:width="1dp" android:color="@color/divider" />
        </shape>
    </item>
</selector>